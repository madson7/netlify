---
import AppLayout from "@layouts/AppLayout.astro";
import BlogCard from "@components/BlogCard.astro";
import Header from "@components/Header.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const title = "Blog | Madson Ramos";
const description =
  "Minha coleção pessoal de trechos de código, guias para iniciantes, tutoriais e coisas interessantes que encontrei online.";
---

<AppLayout title={title} description={description}>
  <Header title="Blog" />
  <p class="max-w-prose mb-10 font-normal text-zinc-400 leading-relaxed">
    {description}
  </p>
  <ul class="flex flex-col gap-8 sm:border-l sm:border-zinc-800">
    {
      <a>Em construção! </a>
    }
  </ul>
</AppLayout>
